//처음에 접근했던 방법은 입력받은 N을 빼고 나누어서 1을 만드는 과정을 생각했지만 최소값을 찾는 방법을 찾지 못했고
//알아봤더니 1부터 시작해서 N까지 모든 최솟값을 구해 나가는 알고리즘이 있었다.
//다른 방향으로 접근 할 수있는 감을 키우자

#include<iostream>
#include<cmath>
#include<algorithm>
#include<climits>

#define endl "\n"

using namespace std;

int dp[1000001];
int N;
int main(void) {
	cin >> N;
	dp[1] = 0;
	dp[2] = 1;
	dp[3] = 1;
	for (int i = 4; i <= N; i++) {
		dp[i] = dp[i - 1] + 1;
		if (i % 2 == 0) {
			dp[i] = min(dp[i], dp[i / 2] + 1);
		}
		if (i % 3 == 0) {
			dp[i] = min(dp[i], dp[i / 3] + 1);
		}
	}


	cout << dp[N];
}

